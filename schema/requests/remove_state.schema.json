{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "RemoveState Request",
    "description": "Remove the specified state record",
    "type": "object",
    "properties": {
        "gameID": {
            "description": "The ID of the game to which the state belongs",
            "$ref": "basic/id.schema.json"
        },
        "stateID": {
            "description": "The ID of the state to be removed",
            "$ref": "basic/id.schema.json"
        }
    },
    "required": [
        "gameID",
        "stateID"
    ],
    "additionalProperties": false
}